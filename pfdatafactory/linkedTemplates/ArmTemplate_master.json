{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "pfdatafactory"
		},
		"PFAzureDataLakeStorage_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'PFAzureDataLakeStorage'"
		},
		"PFAzureDataLakeStorage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://petfinderstorage.dfs.core.windows.net"
		},
		"PetFinderAPI_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://api.petfinder.com/v2/animals?type=dog"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "pfdatafactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"PFAzureDataLakeStorage_accountKey": {
						"value": "[parameters('PFAzureDataLakeStorage_accountKey')]"
					},
					"PFAzureDataLakeStorage_properties_typeProperties_url": {
						"value": "[parameters('PFAzureDataLakeStorage_properties_typeProperties_url')]"
					},
					"PetFinderAPI_properties_typeProperties_url": {
						"value": "[parameters('PetFinderAPI_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}